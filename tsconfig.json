{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // switch to bundler soon: https://github.com/microsoft/TypeScript/pull/51669
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [],
  "references": [
    { "path": "./demo/preact-demo" },
    { "path": "./demo/react-demo" },
    { "path": "./packages/css" },
    { "path": "./packages/preact" },
    { "path": "./packages/react" }
  ]
}
