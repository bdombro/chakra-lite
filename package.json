{
  "name": "chakra-lite",
  "version": "3.0.13",
  "type": "module",
  "author": "Brian Dombrowski",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "format": "prettier -w .",
    "preact": "npm run -w demo/preact-demo dev",
    "react": "npm run -w demo/react-demo dev",
    "prepare": "husky install",
    "publish": "tsc -b && npm publish --access public --workspaces && git add -A && git commit -m 'Pre-tag' && npm version patch && tsc -b --clean"
  },
  "devDependencies": {
    "prettier": "2.8.1",
    "pretty-quick": "3.1.3",
    "typescript": "next",
    "husky": "^8.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
