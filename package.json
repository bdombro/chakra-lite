{
  "name": "@slimr/monorepo",
  "version": "0.0.0",
  "type": "module",
  "author": "Brian Dombrowski",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "workspaces-run --order-by-deps --parallel --ignore='@slimr/mdi-paths'  -- npm run build",
    "build:storybook": "storybook build",
    "clean": "workspaces-run --parallel -- npm run clean",
    "format": "prettier --cache -w .",
    "lint": "eslint . --cache --cache-location=node_modules/.eslintcache && prettier --check .",
    "lint:watch": "npx nodemon -e js,jsx,ts,tsx,css,pcss --exec 'npm run lint'",
    "precommit": "npm i && npm-run-all build format lint 'test -- --run'",
    "preinstall": "echo npm run precommit > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "publish": "deno run -A scripts/bump-changed-workspaces.ts -p -e mdi",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.0-beta.51",
    "@storybook/addon-interactions": "^7.0.0-beta.51",
    "@storybook/addon-links": "^7.0.0-beta.51",
    "@storybook/blocks": "^7.0.0-beta.51",
    "@storybook/react": "^7.0.0-beta.51",
    "@storybook/react-vite": "^7.0.0-beta.51",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/testing-react": "^2.0.0-next.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^21.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.4",
    "storybook": "7.0.0-beta.51",
    "typescript": "4.9.5",
    "vite": "^4.0.0",
    "vitest": "0.26.3",
    "workspaces-run": "^1.0.1"
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-nested": {}
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-prototype-builtins": "off",
      "react/button-has-type": "error",
      "react/no-unescaped-entities": "off",
      "react/prop-types": "off",
      "require-jsdoc": "error"
    },
    "overrides": [
      {
        "files": [
          "packages/**/*.mdx",
          "packages/**/*.stories.*"
        ],
        "rules": {
          "react/react-in-jsx-scope": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "18"
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "printWidth": 100,
    "importOrder": [
      ".pcss$",
      ".css$",
      "polyfills",
      "<THIRD_PARTY_MODULES>",
      "~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
