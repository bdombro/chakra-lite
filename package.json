{
  "name": "@slimr/monorepo",
  "version": "0.0.0",
  "type": "module",
  "author": "Brian Dombrowski",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:phase1 build:phase2",
    "build:phase1": "npm run -w packages/css -w packages/util build",
    "build:phase2": "npm run -w packages/markdown -w packages/router -w packages/styled -w packages/swr build",
    "clean": "npm run --workspaces clean",
    "lint": "eslint . --cache --cache-location=node_modules/.eslintcache",
    "lint:watch": "npx nodemon -e js,jsx,ts,tsx,css,pcss --exec 'npm run lint'",
    "format": "prettier -w .",
    "start": "npm run -w packages/demo start",
    "test": "npm run -w packages/demo test",
    "prepare": "husky install",
    "publish": "npm publish --workspaces --access public"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-prototype-builtins": "off",
      "react/button-has-type": "error",
      "react/no-unescaped-entities": "off",
      "react/prop-types": "off",
      "require-jsdoc": "error"
    },
    "overrides": [
      {
        "files": [
          "packages/demo/**/*"
        ],
        "rules": {
          "react/react-in-jsx-scope": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "18"
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "printWidth": 100,
    "importOrder": [
      ".pcss$",
      ".css$",
      "polyfills",
      "<THIRD_PARTY_MODULES>",
      "~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
